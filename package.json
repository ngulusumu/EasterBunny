{
  "name": "mkenyatool",
  "version": "2.0.0",
  "description": "Advanced Network Testing Tool with Private Coordination",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-gpu --no-sandbox --disable-software-rasterizer",
    "start-dev": "NODE_ENV=development electron . --disable-gpu --no-sandbox --disable-software-rasterizer --enable-logging",
    "start-safe": "electron . --disable-gpu --no-sandbox --disable-software-rasterizer --disable-extensions --disable-plugins",
    "dev": "NODE_ENV=development electron . --disable-gpu",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "clean": "rimraf dist",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "ws": "^8.18.2",
    "nostr-tools": "^2.7.0",
    "crypto-js": "^4.2.0",
    "uuid": "^10.0.0",
    "axios": "^1.7.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^27.0.1",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.7"
  },
  "build": {
    "appId": "com.ngulusumu.mkenyatool",
    "productName": "MKenya Tool",
    "icon": "icons/icon",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "networking/**/*",
      "systeminfo/**/*",
      "worker/**/*",
      "icons/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MKenya Tool"
    },
    "dmg": {
      "title": "MKenya Tool",
      "backgroundColor": "#1a1a1a"
    }
  },
  "author": {
    "name": "Ngulusumu Security"
  },
  "license": "MIT",
  "homepage": "https://github.com/ngulusumu/mkenyatool",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngulusumu/mkenyatool.git"
  },
  "keywords": [
    "network",
    "testing",
    "coordination",
    "security",
    "electron",
    "kenyan"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}